@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de Exclusão";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contato (@Model.Nome)?</h3>
</div>
<div class="d-flex justify-content-around">
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
    <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="DeleteContact">Apagar</a>
</div>
